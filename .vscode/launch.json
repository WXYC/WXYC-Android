{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Android App",
            "type": "android",
            "request": "launch",
            "preLaunchTask": "Build Android App",
            "appSrcRoot": "${workspaceFolder}/BasicMusicPlayer/app/src/main",
            "apkFile": "${workspaceFolder}/BasicMusicPlayer/app/build/outputs/apk/debug/app-debug.apk",
            "adbSocket": "localhost:5037",
            "autoStartADB": true,
            "manifestFile": "${workspaceFolder}/BasicMusicPlayer/app/src/main/AndroidManifest.xml",
            "launchActivity": ".PlayerActivity",
            "staleBuild": "warn",
            "postLaunchPause": 1000,
            "pmInstallArgs": ["-r"],
            "trace": false
        }
    ]
} 